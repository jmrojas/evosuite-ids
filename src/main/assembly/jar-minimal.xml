<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
  <id>jar-minimal</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
	<include>*evosuite-io.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/classes</directory>
      <outputDirectory>/</outputDirectory>
      <excludes>
	<exclude>*.jar</exclude>
        <exclude>de/unisb/cs/st/evosuite/ui/**/*.class</exclude>
        <exclude>de/unisb/cs/st/evosuite/ma/*.class</exclude>
        <exclude>de/unisb/cs/st/evosuite/ma/parser/*.class</exclude>
        <exclude>de/unisb/cs/st/evosuite/ma/gui/*.class</exclude>
        <exclude>de/unisb/cs/st/evosuite/symbolic/**/*.class</exclude>
      </excludes>
    </fileSet>
  </fileSets>
 <dependencySets>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <excludes>
        <exclude>jpf:jpf-annotations</exclude>
        <exclude>jpf:jpf-classes</exclude>
        <exclude>jpf:jpf-core</exclude>
        <exclude>org.eclipse.jdt:*</exclude>
        <exclude>org.eclipse.core:*</exclude>
        <exclude>org.eclipse.team:*</exclude>
        <exclude>org.eclipse.jface:*</exclude>
        <exclude>org.eclipse.ltk:*</exclude>
        <exclude>org.eclipse.tycho:*</exclude>
        <exclude>org.eclipse.*:*</exclude>
        <exclude>org.eclipse.equinox:*</exclude>
        <exclude>org.uispec4j:*</exclude>
        <exclude>com.ibm:icu</exclude>
        <exclude>cvc3:*</exclude>
        <exclude>bcel:*</exclude>
	<exclude>org.smtlib:*</exclude>
	<exclude>javaparser:*</exclude>
      </excludes>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>logback.xml</exclude>
          <exclude>META-INF/*.SF</exclude>
          <exclude>META-INF/*.sf</exclude>
          <exclude>META-INF/*.RSA</exclude>
          <exclude>META-INF/*.rsa</exclude>
          <exclude>META-INF/*.INF</exclude>
          <exclude>META-INF/*.inf</exclude>
        </excludes>
      </unpackOptions>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>
</assembly>
